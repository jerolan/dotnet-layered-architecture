@model IEnumerable<Cf.Dotnet.Architecture.Application.Models.OrdersSummary>

<table class="table">
    <thead>
    <tr>
        <th>
            ID
        </th>
        <th>
            Estado
        </th>
        <th>
            Total
        </th>
        <th>
            Comprador
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
           <td>@item.Id</td>
           <td>@item.Status</td>
           <td>@item.Total</td>
           <td>@item.BuyerName</td>
           <td>
               <form method="post">
                   <input type="hidden" asp-for="@item.Id"/>
                   <input type="submit" value="Remplazar" class="btn btn-danger"/>
               </form>
           </td>
        </tr>
    }
    </tbody>
</table>